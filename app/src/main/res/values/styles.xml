<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyBetsThemeNoActionBar" parent="Theme.AppCompat.NoActionBar">

    </style>

    <style name="MyBetsThemeMorado" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryMorado</item>
        <item name="colorPrimaryDark">@color/colorPrimaryMoradoDark</item>
        <item name="colorAccent">@color/gris_medio</item>
        <item name="android:textColorSecondary">@color/gris_medio</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/color_naranja</item>
    </style>

    <style name="MyBetsThemeEditText" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryMorado</item>
        <item name="colorPrimaryDark">@color/colorPrimaryMoradoDark</item>
        <item name="colorAccent">@color/gris_oscuro</item>
        <item name="android:textColorSecondary">@color/gris_oscuro</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="colorControlNormal">@android:color/black</item>
    </style>

    <style name="MyBetsTextArea" parent="android:TextAppearance.Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>

    </style>

    <style name="MyBetsTextAreaClickable" parent="MyBetsTextArea">
        <item name="android:background">@drawable/mybets_fondo_texto_clickable</item>
    </style>


    <style name="MyBetsEditText" parent="android:Widget.EditText">
        <item name="android:layout_width">@dimen/edittext_anchura</item>
        <item name="android:layout_height">@dimen/edittext_altura</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textColorHint">@color/textEditColor</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:background">@drawable/mybets_shape_rectangulo_blanco</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MyBetsTextTitulo" parent="android:TextAppearance.Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gris</item>
    </style>

    <style name="MyBetsTextNormal" parent="android:TextAppearance.Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gris</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyBetsBotonCategoriaToggle" parent="android:Widget.Holo.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:background">@drawable/mybets_boton_categoria_toggle</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">13sp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <style name="MyBetsBotonCategoria.azul_oscuro" parent="android:Widget.Button" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:background">@drawable/mybets_shape_rectangulo_bordes_redondos_azul_oscuro</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">13sp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <style name="MyBetsBotonCategoria.azul_claro" parent="android:Widget.Button" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:background">@drawable/mybets_shape_rectangulo_bordes_redondos_azul_claro</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">13sp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <style name="MyBetsBotonTextoAmarillo" parent="android:TextAppearance.Widget.TextView">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/mybets_boton_jugar_amarillo</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyBetsBotonTextoAmarillo.redondo" parent="MyBetsBotonTextoAmarillo">
        <item name="android:background">@drawable/mybets_boton_jugar_amarillo_redondo</item>
    </style>

    <style name="mybets_radiobutton_apuesta">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/mybets_radiobutton_toggle</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="MyBetsCheckBoxAmarillo" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/mybets_color_checkbox</item>
        <item name="android:textColorSecondary">@color/mybets_color_checkbox</item>

    </style>

    <style name="mybets_item_apuesta_pasada_boton_apuesta">
        <item name="android:paddingBottom">1dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:enabled">false</item>
        <item name="android:layout_width">19dp</item>
        <item name="android:layout_height">19dp</item>
        <item name="android:background">@drawable/mybets_icon_circulo_gris</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/mybets_color_text_botones_1x2</item>
    </style>

    <style name="pantalla_identificacion_boton">
        <item name="android:layout_width">@dimen/edittext_anchura</item>
        <item name="android:layout_height">@dimen/edittext_altura</item>
        <item name="android:background">@drawable/mybets_shape_rectangulo_transparente_con_bordes_blancos</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">19sp</item>
    </style>


    <color name="color_naranja">#F9A825</color>
</resources>
