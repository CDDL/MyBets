<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">


    <View
        android:id="@+id/item_clasificacion_en_partida_separador"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_clasificacion_en_partida_icon_foto_placeholder"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/mybets_icon_sobre" />

    <TextView
        android:id="@+id/item_clasificacion_en_partida_text_clasificacion"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:background="@drawable/mybets_drawable_circulo"
        android:gravity="center"
        android:text="1"
        android:textColor="@android:color/white"
        android:textSize="16sp" />


    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/item_clasificacion_en_partida_icon_foto_placeholder"
        android:layout_marginLeft="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_clasificacion_en_partida_text_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Aaron Bennett"
            android:textSize="20sp"
            android:textColor="@color/gris"/>

        <TextView
            android:id="@+id/item_clasificacion_en_partida_text_puntos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25.460 puntos"
            android:textSize="17sp"
            android:textColor="@color/gris"/>
    </LinearLayout>
</RelativeLayout>