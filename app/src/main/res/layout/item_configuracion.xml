<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="73dp">

    <ImageView
        android:id="@+id/item_configuracion_icon"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="35dp"
        android:layout_centerVertical="true"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:src="@drawable/mybets_icon_config_notificaciones"/>

    <TextView
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/item_configuracion_icon"
        android:id="@+id/item_configuracion_text"
        android:text="Notificaciones"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textColor="@color/gris_oscuro_pasta"
        android:textSize="20sp"
        android:fontFamily="sans-serif"/>

    <android.support.v7.widget.SwitchCompat
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="33dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"/>
</RelativeLayout>