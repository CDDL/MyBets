<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vistas.pantallas.perfil.EditarPerfil">

    <RelativeLayout
        android:id="@+id/editar_perfil_toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/azul_claro"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/editar_perfil_boton_cerrar"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginLeft="15dp"
            android:contentDescription="@string/editar_perfil_boton_cerrar_ventana_desc"
            android:src="@drawable/mybets_icon_cerrar_transparente" />

        <TextView
            android:id="@+id/editar_perfil_text_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/editar_perfil_boton_cerrar"
            android:fontFamily="sans-serif-medium"
            android:text="@string/editar_perfil_text_titulo"
            android:textColor="@android:color/white"
            android:textSize="20sp" />


    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/editar_perfil_icon_foto_placeholder"
        android:layout_width="126dp"
        android:layout_height="126dp"
        android:layout_below="@id/editar_perfil_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/mybets_icon_juega_ya_dialog_placeholder"
        app:civ_border_color="@color/gris_claro"
        app:civ_border_overlay="true"
        app:civ_border_width="8dp" />


    <TextView
        android:id="@+id/editar_perfil_boton_guardar"
        style="@style/MyBetsBotonTextoAmarillo.redondo"
        android:layout_width="184dp"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="Guardar"
        android:textSize="22sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/editar_perfil_boton_guardar"
        android:layout_below="@id/editar_perfil_icon_foto_placeholder"
        android:gravity="center">

        <EditText
            android:id="@+id/editar_perfil_text_nombre"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:hint="Abbey"
            android:singleLine="true"
            android:textColor="@color/gris_medio"
            android:textColorHint="@color/gris_medio" />

        <EditText
            android:id="@+id/editar_perfil_text_username"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/editar_perfil_text_nombre"
            android:hint="Abbey Christensen"
            android:singleLine="true"
            android:textColor="@color/gris_medio"
            android:textColorHint="@color/gris_medio" />

        <EditText
            android:id="@+id/editar_perfil_text_email"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/editar_perfil_text_username"
            android:enabled="false"
            android:hint="Abbey@mybets.com"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textColor="@color/gris_medio"
            android:textColorHint="@color/gris_medio" />

        <EditText
            android:id="@+id/editar_perfil_text_password"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/editar_perfil_text_email"
            android:enabled="false"
            android:text="nnnnnnnnnnnn"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/gris_medio"
            android:textColorHint="@color/gris_medio" />

    </RelativeLayout>
</RelativeLayout>
