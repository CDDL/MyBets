<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="72dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/apostarexact_nombre_equipo1"
        android:layout_width="160dp"
        android:layout_height="26dp"
        android:background="@drawable/mybets_fondo_equipo_nombre_izquierda"
        android:gravity="center_vertical"
        android:textSize="16sp">

        <TextView
            android:id="@+id/apostarexact_text_nombre_equipo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Barcelona"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/apostarexact_text_nombre_equipo1"
            android:contentDescription="@string/text_icono_equipo_1_desc"
            android:src="@drawable/mybets_icono_equipo_placeholder" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/apostarexact_score_equipo1"
        android:layout_width="160dp"
        android:layout_height="26dp"
        android:layout_below="@id/apostarexact_nombre_equipo1"
        android:gravity="center_vertical"
        android:textSize="16sp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.30"
            android:src="@drawable/mybets_fondo_equipo_score_izquierda" />

        <TextView
            android:id="@+id/apostarexact_text_score_equipo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="1"
            android:textSize="18sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/apostarexact_nombre_equipo2"
        android:layout_width="160dp"
        android:layout_height="26dp"
        android:layout_marginLeft="1dp"
        android:layout_toRightOf="@id/apostarexact_nombre_equipo1"
        android:background="@drawable/mybets_fondo_equipo_nombre_derecha"
        android:gravity="center_vertical"
        android:textSize="16sp">

        <TextView
            android:id="@+id/apostarexact_text_nombre_equipo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Barcelona"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/apostarexact_text_nombre_equipo2"
            android:contentDescription="@string/text_icono_equipo_2_desc"
            android:src="@drawable/mybets_icono_equipo_placeholder" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/apostarexact_score_equipo2"
        android:layout_width="160dp"
        android:layout_height="26dp"
        android:layout_below="@id/apostarexact_nombre_equipo2"
        android:layout_marginLeft="1dp"
        android:layout_toRightOf="@id/apostarexact_score_equipo1"
        android:gravity="center_vertical"
        android:textSize="16sp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.30"
            android:src="@drawable/mybets_fondo_equipo_score_derecha" />

        <TextView
            android:id="@+id/apostarexact_text_score_equipo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="1"
            android:textSize="18sp" />

    </RelativeLayout>
</RelativeLayout>