<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.catalin.mybets.vistas.pantallas.categorias.PantallaSubCategoria">

    <android.support.v7.widget.Toolbar
        android:id="@+id/pantalla_subcategoria_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/mybets_color_categoria_azul_oscuro" />

    <com.viewpagerindicator.IconPageIndicator
        android:id="@+id/pantalla_subcategoria_pageindicator"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_below="@id/pantalla_subcategoria_toolbar"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="17dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pantalla_subcategoria_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/pantalla_subcategoria_pageindicator" />

</RelativeLayout>
